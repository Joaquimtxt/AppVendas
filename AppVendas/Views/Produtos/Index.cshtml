@model IEnumerable<AppVendas.Models.Produto>

@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<div class="d-flex justify-content-between my-5 align-items-center">

    <span class="display-6 w-75 justify-content-center">Cadastro de Produtos</span>

    <a asp-action="Create" class="btn btn-secondary px-5 w-25 d-flex align-items-center justify-content-center">
        <ion-icon name="add-circle-outline" class="fs-4"></ion-icon> <span class="fs-4 ms-2 fst-italic">Adicionar</span>
    </a>

</div>

<div class="table-responsive">

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.ProdutoNome)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.QtdadeEstoque)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.CadastroAtivo)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th class="bg-black"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtdadeEstoque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CadastroAtivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-outline-secondary align-items-center">
                            <ion-icon name="create"></ion-icon>  Editar
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-outline-secondary align-items-center ms-2">

                            <ion-icon name="trash"></ion-icon> Apagar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
